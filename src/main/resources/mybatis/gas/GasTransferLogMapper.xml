<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.bus.transferLog.mapper.GasTransferLogMapper">
    
    <resultMap type="GasTransferLog" id="GasTransferLogResult">
        <result property="id"    column="id"    />
        <result property="userAddr"    column="userAddr"    />
        <result property="amount"    column="amount"    />
        <result property="txhash"    column="txhash"    />
        <result property="optime"    column="optime"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectGasTransferLogVo">
        select id, userAddr, amount, txhash, optime, remark from gas_transfer_log
    </sql>

    <select id="selectGasTransferLogList" parameterType="GasTransferLog" resultMap="GasTransferLogResult">
        <include refid="selectGasTransferLogVo"/>
        <where>  
            <if test="userAddr != null  and userAddr != ''"> and userAddr = #{userAddr}</if>
            <if test="amount != null  and amount != ''"> and amount = #{amount}</if>
            <if test="txhash != null  and txhash != ''"> and txhash = #{txhash}</if>
            <if test="optime != null  and optime != ''"> and optime = #{optime}</if>
        </where>
        order by id desc
    </select>

    <select id="selectGasTransferLogList50" parameterType="GasTransferLog" resultMap="GasTransferLogResult">
        <include refid="selectGasTransferLogVo"/>
        <where>
            <if test="userAddr != null  and userAddr != ''"> and userAddr = #{userAddr}</if>
            <if test="amount != null  and amount != ''"> and amount = #{amount}</if>
            <if test="txhash != null  and txhash != ''"> and txhash = #{txhash}</if>
            <if test="optime != null  and optime != ''"> and optime = #{optime}</if>
        </where>
        order by id desc limit 50
    </select>
    
    <select id="selectGasTransferLogById" parameterType="Long" resultMap="GasTransferLogResult">
        <include refid="selectGasTransferLogVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertGasTransferLog" parameterType="GasTransferLog" useGeneratedKeys="true" keyProperty="id">
        insert into gas_transfer_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userAddr != null">userAddr,</if>
            <if test="amount != null">amount,</if>
            <if test="txhash != null">txhash,</if>
            <if test="optime != null">optime,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userAddr != null">#{userAddr},</if>
            <if test="amount != null">#{amount},</if>
            <if test="txhash != null">#{txhash},</if>
            <if test="optime != null">#{optime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateGasTransferLog" parameterType="GasTransferLog">
        update gas_transfer_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="userAddr != null">userAddr = #{userAddr},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="txhash != null">txhash = #{txhash},</if>
            <if test="optime != null">optime = #{optime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGasTransferLogById" parameterType="Long">
        delete from gas_transfer_log where id = #{id}
    </delete>

    <delete id="deleteGasTransferLogByIds" parameterType="String">
        delete from gas_transfer_log where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>